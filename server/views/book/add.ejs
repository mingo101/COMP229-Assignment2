<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Contacts Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone #</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter Contact Phone Number"
                    name="phone" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Contact Email"
                    name="email" required>
                </div>

                <div class="form-group">
                    <label for="notesTextArea">Notes</label>
                    <textarea type="text" class="form-control"
                    id="notesTextArea"
                    placeholder="Enter Any Additional Notes"
                    name="notes" required></textarea>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

